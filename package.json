{
  "name": "fanfare-inventory-tracker",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run build && npm run pages:dev",
    "dev:vite": "vite",
    "dev:watch": "vite build --watch",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",

    "pages:dev": "wrangler pages dev dist --d1=DB --live-reload",
    "pages:deploy": "npm run build && wrangler pages deploy dist",

    "db:create": "wrangler d1 create fanfare-inventory-db",
    "db:init": "npm run db:migrate:local && npm run db:seed:local",
    "db:migrate:local": "wrangler d1 execute fanfare-inventory-db --local --file=./db/migrations/0001_initial.sql",
    "db:seed:local": "wrangler d1 execute fanfare-inventory-db --local --file=./db/migrations/0002_seed.sql",
    "db:migrate:prod": "wrangler d1 execute fanfare-inventory-db --remote --file=./db/migrations/0001_initial.sql",
    "db:seed:prod": "wrangler d1 execute fanfare-inventory-db --remote --file=./db/migrations/0002_seed.sql",
    "db:query": "wrangler d1 execute fanfare-inventory-db --local --command",
    "db:query:prod": "wrangler d1 execute fanfare-inventory-db --remote --command",
    "db:studio": "drizzle-kit studio",
    "db:reset": "rm -rf .wrangler/state && npm run db:init",

    "secret:set": "wrangler secret put",
    "deploy": "npm run build && wrangler pages deploy dist --project-name=fanfare-inventory-tracker",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name=fanfare-inventory-tracker --branch=main"
  },
  "dependencies": {
    "preact": "^10.19.3",
    "preact-router": "^4.1.2",
    "drizzle-orm": "^0.29.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@preact/preset-vite": "^2.8.1",
    "autoprefixer": "^10.4.17",
    "drizzle-kit": "^0.20.13",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "wrangler": "^3.25.0"
  }
}
