{
  "name": "fanfare-inventory-tracker",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "pages:dev": "wrangler pages dev dist --d1=DB",
    "pages:deploy": "npm run build && wrangler pages deploy dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply fanfare-inventory-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply fanfare-inventory-db --remote",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "preact": "^10.19.3",
    "preact-router": "^4.1.2",
    "drizzle-orm": "^0.29.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@preact/preset-vite": "^2.8.1",
    "autoprefixer": "^10.4.17",
    "drizzle-kit": "^0.20.13",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "wrangler": "^3.25.0"
  }
}
